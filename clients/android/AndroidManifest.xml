<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.openecard.client.android"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="10" />

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.NFC" />

    <uses-feature
        android:name="android.hardware.nfc"
        android:required="true" />

    <application
        android:name=".ApplicationContext"
        android:debuggable="true"
        android:icon="@drawable/openecard"
        android:label="@string/app_name" >
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                 
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                  
                <!--
                     <action android:name="android.nfc.action.TAG_DISCOVERED"/> <category 
					android:name="android.intent.category.DEFAULT"/>
                -->
            </intent-filter>
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" /> 
            	<action android:name="android.intent.action.VIEW" />
            	<category android:name="android.intent.category.BROWSABLE" />
            	<data android:scheme="http" />
                <data android:host="127.0.0.1" /> 
                <data android:port="18080" />
             </intent-filter>
              <intent-filter>
                <category android:name="android.intent.category.DEFAULT" /> 
            	<action android:name="android.intent.action.VIEW" />
            	<category android:name="android.intent.category.BROWSABLE" />
            	<data android:scheme="https" />
                <data android:host="prod.governikus-eid.de" /> 
             </intent-filter>
			<intent-filter>
                <category android:name="android.intent.category.DEFAULT" /> 
            	<action android:name="android.intent.action.VIEW" />
            	<category android:name="android.intent.category.BROWSABLE" />
            	<data android:scheme="https" />
                <data android:host="eid.eid-service.de" /> 
             </intent-filter>
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" /> 
            	<action android:name="android.intent.action.VIEW" />
            	<category android:name="android.intent.category.BROWSABLE" />
            	<data android:scheme="https" />
                <data android:host="eid.services.ageto.net" /> 
             </intent-filter>
            <!--  <intent-filter>
                <category android:name="android.intent.category.DEFAULT" /> 
            <action android:name="android.intent.action.VIEW" />
            <category android:name="android.intent.category.BROWSABLE" />
            <data android:scheme="https" />
                <data android:host="*" /> 
             </intent-filter> -->
        </activity>
         <activity android:name=".activities.AboutActivity"
        		
                  android:configChanges="orientation|keyboardHidden" />
         <activity android:name=".activities.CardInfoActivity"
        		
                  android:configChanges="orientation|keyboardHidden" />
         <activity android:name=".activities.PINManagementActivity"
        		
                  android:configChanges="orientation|keyboardHidden" />
         <activity android:name="org.openecard.client.gui.android.StepActivity"
        		
                  android:configChanges="orientation|keyboardHidden" />
    </application>

</manifest>